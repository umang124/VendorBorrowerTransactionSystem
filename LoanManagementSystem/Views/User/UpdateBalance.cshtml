@model LoanManagementSystem.DTOs.UpdateUserBalanceDTO
@{
    ViewBag.Title = "UpdateBalance";
}

@using (Html.BeginForm("UpdateBalance", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class='shadow-lg p-3 mb-5 bg-body rounded mx-auto' style="width: 40rem; margin-top: 40px">
    <h2 class="mb-3 text-center">Update User Balance</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Id)
    <div class="form-floating mb-3">
        @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.Balance)
        @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update</button>
</div>
}
